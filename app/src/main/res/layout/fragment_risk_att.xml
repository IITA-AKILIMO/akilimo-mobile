<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyt_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_5"
    android:padding="@dimen/spacing_medium"
    tools:context="com.akilimo.mobile.views.fragments.RiskAttFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="?attr/actionBarSize">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/ic_risk_att" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"

            android:text="@string/lbl_risk_att"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/akilimoDarkGreen" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/riskAttText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"

            android:text="@string/empty_text"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPickRiskAtt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:text="@string/lbl_select_risk_att"
            android:textAllCaps="false"
            android:theme="@style/Button.Green"
            app:cornerRadius="@dimen/spacing_small" />

    </LinearLayout>
</RelativeLayout>
