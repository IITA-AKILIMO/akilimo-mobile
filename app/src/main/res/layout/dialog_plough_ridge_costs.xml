<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- begin plough cost section -->

    <TextView
        android:id="@+id/ploughCostTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:padding="@dimen/spacing_medium"
        android:text="@string/lbl_tractor_plough_cost"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorAccent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ploughCostCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:visibility="visible"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="6dp"
        app:contentPadding="@dimen/spacing_small">

        <RadioGroup
            android:id="@+id/rdgPloughCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rd_exact_plough_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_specify_my_cost" />

        </RadioGroup>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lytExactPlough"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium"
        android:visibility="gone">


        <EditText
            android:id="@+id/etExactPloughCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_5"

            android:hint="@string/lbl_specify_my_cost"
            android:inputType="numberDecimal"
            android:padding="@dimen/spacing_large" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- end plough cost section -->

    <!-- begin ridge cost section -->
    <TextView
        android:id="@+id/ridgeCostTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:padding="@dimen/spacing_medium"
        android:text="@string/lbl_tractor_ridge_cost"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/colorAccent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ridgeCostCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:visibility="visible"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="6dp"
        app:contentPadding="@dimen/spacing_small">

        <RadioGroup
            android:id="@+id/rdgRidgeCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rd_exact_ridge_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_specify_my_cost" />

        </RadioGroup>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/lytExactRidge"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium"
        android:visibility="gone">


        <EditText
            android:id="@+id/etExactRidgeCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_5"

            android:hint="@string/lbl_specify_my_cost"
            android:inputType="numberDecimal"
            android:padding="@dimen/spacing_large" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- end ridge cost section -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_submit"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="@string/lbl_submit" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_cancel"
            style="@style/Button.Accent.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="@string/lbl_cancel" />


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
