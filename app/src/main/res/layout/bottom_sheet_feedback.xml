<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large">

    <!-- Header with drag handle -->
    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:background="@drawable/bg_bottom_sheet_handle" />

    <!-- Title -->
    <TextView
        android:id="@+id/feedback_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_small"
        android:text="@string/rate_recommendation_title"
        android:textColor="?android:textColorPrimary"
        android:textSize="@dimen/font_size_18"
        android:textStyle="bold" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/feedback_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_large"
        android:text="@string/rate_recommendation_subtitle"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/font_size_14" />

    <!-- Emoji rating buttons -->
    <LinearLayout
        android:id="@+id/emoji_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rating_1"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="ðŸ˜¡"
            android:textSize="28sp"
            app:cornerRadius="12dp"
            app:rippleColor="?attr/colorPrimary"
            app:strokeColor="@color/rating_stroke_selector"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rating_2"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="ðŸ˜•"
            android:textSize="28sp"
            app:cornerRadius="12dp"
            app:rippleColor="?attr/colorPrimary"
            app:strokeColor="@color/rating_stroke_selector"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rating_3"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="ðŸ˜"
            android:textSize="28sp"
            app:cornerRadius="12dp"
            app:rippleColor="?attr/colorPrimary"
            app:strokeColor="@color/rating_stroke_selector"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rating_4"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="ðŸ™‚"
            android:textSize="28sp"
            app:cornerRadius="12dp"
            app:rippleColor="?attr/colorPrimary"
            app:strokeColor="@color/rating_stroke_selector"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rating_5"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:text="ðŸ˜"
            android:textSize="28sp"
            app:cornerRadius="12dp"
            app:rippleColor="?attr/colorPrimary"
            app:strokeColor="@color/rating_stroke_selector"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <!-- Rating labels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rating_very_poor"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rating_poor"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rating_okay"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rating_good"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/rating_excellent"
            android:textColor="?android:textColorTertiary"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

    <!-- Selected rating feedback (hidden by default) -->
    <TextView
        android:id="@+id/selected_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="@dimen/spacing_small"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/font_size_14"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>