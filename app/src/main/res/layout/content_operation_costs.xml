<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/appbar_padding_top"
    tools:showIn="@layout/fragment_operation_cost_dialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{operationCost.email}" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_first_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_first_manual_plough_op">

        <EditText
            android:id="@+id/txtManualFirstOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/lbl_19000" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_first_plough_tractor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_first_tractor_plough_op">

        <EditText
            android:id="@+id/txtTractorPloughFirstOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/lbl_10000" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_second_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_second_manual_plough_op">

        <EditText
            android:id="@+id/txtManualSecondOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/lbl_15000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_second_plough_tractor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_second_tractor_plough_op">

        <EditText
            android:id="@+id/txtTractorPloughSecondOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/lbl_8000" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_harrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_tractor_harrow_op">

        <EditText
            android:id="@+id/txtHarrowOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/lbl_8000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_ridging_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_manual_ridging_op">

        <EditText
            android:id="@+id/txtRidgingManualOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/lbl_7500" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_ridging_tractor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/lbl_tractor_ridger">

        <EditText
            android:id="@+id/txtRidgingTractorOp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@string/lbl_7500" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{operationCost.email}" />
</LinearLayout>
