<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="@dimen/dimen_5" />

    <!-- Border/stroke definition -->
    <stroke
        android:width="@dimen/dimen_1"
        android:color="@color/grey_3" />

    <!-- Subtle gradient background for visual depth -->
    <gradient
        android:angle="270"
        android:endColor="@color/grey_5"
        android:startColor="@color/grey_3"
        android:type="linear" />

    <!-- Optional padding for content inside shape -->
    <padding
        android:bottom="@dimen/spacing_medium"
        android:left="@dimen/spacing_medium"
        android:right="@dimen/spacing_medium"
        android:top="@dimen/spacing_medium" />

</shape>
