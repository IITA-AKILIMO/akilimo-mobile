<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Material Design Primary Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <!-- App-wide font -->
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="fontFamily">@font/ubuntu</item>

        <!-- Window / action modes -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/blue_grey_600</item>

        <!-- Dialog theme -->
        <item name="dialogTheme">@style/DialogTheme</item>

        <!-- Ripple theme for Material -->
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Inherit colors and fonts from your main theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="fontFamily">@font/ubuntu</item>
    </style>

    <!-- Dialog theme using Material -->
    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <!-- Splash Themes -->
    <style name="SplashThemeCommon" parent="AppTheme.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_background_raster</item>
    </style>

    <style name="SplashTheme" parent="SplashThemeCommon">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Fullscreen theme -->
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/black_overlay</item>
    </style>

    <!-- Overlays for AppBar, Toolbar and Popups -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="fontFamily">@font/ubuntu</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="fontFamily">@font/ubuntu</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="fontFamily">@font/ubuntu</item>
    </style>

    <!-- Buttons -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Accent" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Green" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/light_green_700</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Brown" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/brown_400</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.White" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/grey_60</item>
    </style>

    <style name="Button.Primary.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button.Accent.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Button.Accent.Borderless.WhiteText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.White.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Button.White.TextDark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Button.White.Accent" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- Dialog Theme (AppCompat -> MaterialComponents) -->
    <style name="Dialog.Theme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <!-- Picker Dialog Themes -->
    <style name="DatePickerThemeLight" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccentDark</item>
    </style>

    <style name="TimePickerThemeLight" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
    </style>

    <!-- Custom Tabs -->
    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="CustomTabTextAppearance" parent="Widget.Design.TabLayout">
        <item name="android:textColor">@color/grey_10</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Subhead.Bold" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Medium.Bold" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Drawer style -->
    <style name="Drawer.Custom.Dark" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="colorControlHighlight">#26000000</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
    </style>

    <style name="Toolbar.Light" parent="AppTheme">
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="android:textColorPrimary">@color/grey_60</item>
    </style>

    <!-- EditText Styles -->
    <style name="EditText.Yellow" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlNormal">@color/grey_5</item>
        <item name="colorControlActivated">@color/amber_500</item>
        <item name="colorControlHighlight">@color/amber_500</item>
    </style>

    <style name="EditText.White" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlNormal">@color/grey_10</item>
    </style>

    <style name="EditText.White.Hint" parent="EditText.White">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/grey_10</item>
    </style>

    <style name="EditText.Grey" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlActivated">@color/grey_60</item>
        <item name="colorControlHighlight">@color/grey_60</item>
        <item name="colorControlNormal">@color/grey_40</item>
    </style>

    <style name="EditText.GreySoft" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlActivated">@color/grey_40</item>
        <item name="colorControlHighlight">@color/grey_40</item>
        <item name="colorControlNormal">@color/grey_20</item>
    </style>

    <style name="EditText.Grey.Hint" parent="EditText.Grey">
        <item name="colorAccent">@color/grey_60</item>
    </style>

    <style name="EditText.Green" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlActivated">@color/green_500</item>
        <item name="colorControlHighlight">@color/green_500</item>
        <item name="colorControlNormal">@color/green_400</item>
    </style>

    <style name="EditText.Green.Hint" parent="EditText.Green">
        <item name="colorAccent">@color/green_700</item>
    </style>

    <!-- Custom Dialog Animation -->
    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="DialogSlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="DialogFadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>
</resources>
